<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first_question2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adambirosh_admin.newapplication.FirstQuestion">

    <TextView
        android:text="@string/text_to_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_to_change"
        android:gravity="center"
        android:textSize="36sp"
        android:layout_marginTop="93dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/zero"
        android:textSize="80sp"
        android:layout_width= "86sp"
        android:layout_height="wrap_content"
        android:id="@+id/button0"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/button1"
        android:layout_toLeftOf="@+id/button1"
        android:layout_toStartOf="@+id/button1" />

    <Button
        android:text="@string/one"
        android:textSize="80sp"
        android:layout_width= "86sp"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:visibility="invisible"
        android:layout_marginTop="320dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/two"
        android:textSize="80sp"
        android:layout_width= "86sp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:layout_toEndOf="@+id/button1" />

    <Button
        android:text="@string/three"
        android:textSize="80sp"
        android:layout_width= "86sp"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:visibility="invisible"
        android:layout_below="@+id/button0"
        android:layout_alignRight="@+id/lessSevere"
        android:layout_alignEnd="@+id/lessSevere" />

    <Button
        android:text="@string/four"
        android:textSize="80sp"
        android:layout_width= "86sp"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_toRightOf="@+id/button3" />

    <Button
        android:text="@string/five"
        android:textSize="80sp"
        android:layout_width= "86sp"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:text="@string/six"
        android:textSize="80sp"
        android:layout_width= "86sp"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:visibility="invisible"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5" />

    <TextView
        android:text="@string/moreSevere"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moreSevere"
        android:visibility="invisible"
        android:layout_below="@+id/button5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/lessSevere"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lessSevere"
        android:visibility="invisible"
        android:layout_above="@+id/button0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/gotIt"
        android:layout_width="wrap_content"
        android:layout_height="200sp"
        android:textSize="60sp"
        android:layout_below="@+id/button1"
        android:id="@+id/buttonGotIt"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/Jan"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonJan"
        android:textSize="18sp"
        android:visibility="invisible"
        android:layout_marginTop="220dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/Feb"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFeb"
        android:textSize="18sp"
        android:visibility="invisible"
        android:layout_marginTop="220dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="@string/Mar"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMar"
        android:textSize="18sp"
        android:visibility="invisible"
        android:layout_below="@+id/buttonJan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/Apr"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonApr"
        android:textSize="18sp"
        android:visibility="invisible"
        android:layout_below="@+id/buttonFeb"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="@string/May"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMay"
        android:textSize="18sp"
        android:visibility="invisible"
        android:layout_below="@+id/buttonMar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/Jun"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonJun"
        android:textSize="18sp"
        android:visibility="invisible"
        android:layout_below="@+id/buttonApr"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="@string/Jul"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonJul"
        android:textSize="18sp"
        android:visibility="invisible"
        android:layout_below="@+id/buttonMay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/Aug"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAug"
        android:textSize="18sp"
        android:visibility="invisible"
        android:layout_below="@+id/buttonJun"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="@string/Sep"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSep"
        android:textSize="18sp"
        android:visibility="invisible"
        android:layout_below="@+id/buttonJul"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="@string/Oct"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonOct"
        android:textSize="18sp"
        android:visibility="invisible"
        android:layout_below="@+id/buttonAug"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="@string/Nov"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonNov"
        android:textSize="18sp"
        android:visibility="invisible"
        android:layout_below="@+id/buttonSep"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="@string/Dec"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDec"
        android:textSize="18sp"
        android:visibility="invisible"
        android:layout_below="@+id/buttonOct"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="@string/Mon"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMon"
        android:textSize="18sp"
        android:visibility="invisible"
        android:layout_marginTop="220dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/Tue"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonTue"
        android:textSize="18sp"
        android:visibility="invisible"
        android:layout_below="@+id/buttonMon"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/Wed"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonWed"
        android:textSize="18sp"
        android:layout_below="@+id/buttonTue"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <Button
        android:text="@string/Thu"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonThu"
        android:textSize="18sp"
        android:layout_below="@+id/buttonWed"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <Button
        android:text="@string/Fri"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFri"
        android:textSize="18sp"
        android:visibility="invisible"
        android:layout_below="@+id/buttonThu"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/Sat"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSat"
        android:textSize="18sp"
        android:layout_below="@+id/buttonFri"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <Button
        android:text="@string/Sun"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSun"
        android:textSize="18sp"
        android:layout_below="@+id/buttonSat"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/txtValue"
        android:selectAllOnFocus="false"
        android:visibility="invisible"
        android:layout_above="@+id/button0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/numValue"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignBaseline="@+id/txtValue"
        android:layout_alignBottom="@+id/txtValue"
        android:layout_alignLeft="@+id/txtValue"
        android:layout_alignStart="@+id/txtValue" />

    <Button
        android:text="@string/OK"
        android:layout_width="wrap_content"
        android:layout_height="200sp"
        android:textSize="60sp"
        android:id="@+id/buttonOK"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
